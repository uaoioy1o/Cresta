.main-title {
    font-size: 32rpx;
}

.pannel .pannel-title {
    font-weight: 500;
    padding: 24rpx;
}

.pannel .pannel-body {
    padding: 24rpx;
}

view {
    color: #333;
    font-size: 28rpx;
    line-height: 1;
}

.right_icon:after {
    background-image: url("https://tystatic.liuxx.com/wechat/images/right_icon.png");
    background-size: cover;
    content: " ";
    display: block;
    height: 20rpx;
    margin-left: 12rpx;
    width: 20rpx;
}

page {
    background-color: #f8f8f8;
}

.container {
    padding-bottom: 100px;
}

.container .container_input_item {
    align-items: center;
    border-bottom: 1rpx solid #e5e5e5;
    display: flex;
    height: 100rpx;
    justify-content: space-between;
}

.container .container_input_item:last-child {
    border-bottom: none;
}

.container .container_input_item text {
    color: #333;
    font-size: 28rpx;
    width: 250rpx;
}

.container .container_input_item input {
    color: #333;
    font-size: 28rpx;
    padding: 12rpx;
    text-align: center;
    width: 20px;
}

.container .info-tags {
    display: flex;
    margin-bottom: 12rpx;
}

.container .info-tags text {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    background: #f2f3f5;
    border-radius: 11px;
    color: #666;
    display: -webkit-box;
    font-size: 22rpx;
    height: 22px;
    line-height: 22px;
    margin-right: 12rpx;
    overflow: hidden;
    text-align: center;
    width: 75px;
}

.container .info-tags text.active {
    background: #ffe60f;
}

.container .pannel-body {
    padding: 0 24rpx;
}

.container .detail {
    background-color: #fff;
    margin-top: 24rpx;
}

.container .detail .time_chart {
    padding: 40rpx 40rpx 20rpx;
}

.container .detail .time_chart image {
    width: 100%;
}

.container .detail .detail_body {
    color: #666;
    line-height: 1.3;
    word-break: break-all;
}

.container .reservation_pannel {
    background: #fff;
    border-radius: 20rpx;
    margin-top: 24rpx;
    padding-top: 24rpx;
}

.container .item {
    display: flex;
    flex-wrap: wrap;
    padding: 24rpx 0 0;
    width: calc(100vw - 72rpx);
}

.container .item .image {
    align-items: center;
    background: #f7f7f7;
    background-size: cover;
    display: flex;
    height: calc((100vw - 72rpx)/4 - 24rpx);
    justify-content: center;
    margin-bottom: 24rpx;
    margin-right: 24rpx;
    width: calc((100vw - 72rpx)/4 - 24rpx);
}

.container .footer {
    background: #fff;
    bottom: 0;
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
    justify-content: center;
    padding: 20rpx 0 0;
    position: fixed;
    width: 100%;
    z-index: 100;
}

.container .footer .goyuyue {
    align-items: center;
    background-color: #ffe60f;
    border: none;
    box-sizing: border-box;
    color: #fff;
    display: flex;
    font-size: 36rpx;
    justify-content: center;
    line-height: normal;
    margin: 0 24rpx;
    padding: 24rpx 0;
    width: 100%;
}

.container .footer .goyuyue image {
    height: 44rpx;
    width: 48rpx;
}

.container .footer .goyuyue .btnyuyue {
    background: none;
    color: #fff;
    font-size: 36rpx;
    line-height: inherit;
    margin: 0 12rpx 0 24rpx;
    padding: 0;
}

.container .footer .goyuyue:after {
    border: none;
    border-radius: none;
}

.container .footer .btn_area {
    display: flex;
    flex: 1;
    margin-bottom: 30px;
}

.container .footer .btn_area .icon {
    color: #fd4c38;
    display: flex;
    flex: 1;
    flex-direction: column;
    font-weight: 500;
    justify-content: center;
    line-height: 1;
    padding: 0 24rpx;
}

.container .footer .btn_area .icon::after {
    border: 0;
}